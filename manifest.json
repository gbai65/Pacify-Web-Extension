{
  "manifest_version": 3,
  "name": "Pacify",
  "version": "1.1",
  "description": "Blocks hate speech on web pages.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "declarativeContent"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
